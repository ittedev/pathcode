{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick an Ubuntu version: hirsute, focal, bionic
		// Use hirsute or bionic on local arm64/Apple Silicon.
		"args": { "VARIANT": "focal" }
	},
	"settings": {
		"deno.enable": true,
		"deno.lint": true,
        "deno.unstable": true,
		"editor.defaultFormatter": "denoland.vscode-deno",
		"editor.tabSize": 2
	},
	"extensions": [
		"denoland.vscode-deno"
	],
	"remoteUser": "vscode"
}
